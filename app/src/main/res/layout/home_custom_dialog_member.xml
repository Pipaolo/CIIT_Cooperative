<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/home_customDialog_tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/home_customDialog_iv_profileImage"
            android:textSize="12sp"
            android:textColor="#000"
            android:text="Email: "/>

    <TextView
            android:id="@+id/home_customDialog_tv_name"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/home_customDialog_iv_profileImage"
            android:layout_below="@id/home_customDialog_tv_email"
            android:textSize="12sp"
            android:textColor="#000"
            android:text="Name: "/>

    <TextView
            android:id="@+id/home_customDialog_tv_password"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/home_customDialog_iv_profileImage"
            android:layout_below="@id/home_customDialog_tv_name"
            android:textSize="12sp"
            android:textColor="#000"
            android:text="Password: "/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home_customDialog_iv_profileImage"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_person_black_24dp"
            android:layout_alignParentStart="true"
    />

</RelativeLayout>