<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:background="@android:color/white">

        <ImageView
                android:id="@+id/customDialog_member_status_profileImage"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

        <FrameLayout
                android:id="@+id/padding"
                android:layout_below="@id/customDialog_member_status_profileImage"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/customDialog_member_status_email"
                android:layout_below="@id/padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="Email: "/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/customDialog_member_status_name"
                android:layout_below="@id/customDialog_member_status_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="Name: "/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/customDialog_member_status_password"
                android:layout_below="@id/customDialog_member_status_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="Password: "/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/customDialog_member_status_isAbleToLoan"
                android:layout_below="@id/customDialog_member_status_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="Allow to loan: "/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/customDialog_member_status_totalLoan"
                android:layout_below="@id/customDialog_member_status_isAbleToLoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="No. of Loans: "/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/customDialog_member_status_totalShare"
                android:layout_below="@id/customDialog_member_status_totalLoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="No. of Shares: "/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/customDialog_member_status_contribution"
                android:layout_below="@id/customDialog_member_status_totalShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:text="Contributions: "/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
