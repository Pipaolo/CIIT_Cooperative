<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSurface">@color/colorOnSurface</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">#E1341E</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:fontFamily">Roboto</item>

        <item name="textInputStyle">@style/CustomTextInputLayout</item>
        <item name="buttonStyle">@style/CustomButton</item>
    </style>

    <style name="CustomDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">#6200EE</item>
        <item name="colorSecondary">#03DAC6</item>
        <item name="android:colorBackground">@color/background</item>
    </style>

    <style name="AppBarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">25sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:color">#FFFFFF</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorOnPrimary</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="android:textColorHint">@color/colorOnSurface</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textColorPrimary">@color/colorOnSurface</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="elevation">2dp</item>
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:background">@color/colorSecondary</item>
    </style>

    <color name="background">#FFFFFF</color>

</resources>
